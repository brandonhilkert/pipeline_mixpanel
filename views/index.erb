<!DOCTYPE html>
<html>
  <head>
    <title>Mixpanel Dashboard</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="<%= asset_path('application.css') %>" rel="stylesheet" type="text/css" />
    <link href='http://fonts.googleapis.com/css?family=Lato:300,400,700' rel='stylesheet' type='text/css'>
    <link href="//netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome.css" rel="stylesheet">
  </head>
  <body>
    <div class="content"></div>

    <script type="text/x-handlebars-template" id="dashboard-template">
      {{#with stats}}
        <div class="stat">
          <h2><span class='dot'>&bull;</span>&nbsp; Paid Seats Created</h2>
          <section>
            {{#if paid}}
              {{paid.seats_created}}
            {{else}}
              <i class="icon-refresh icon-spin"></i>
            {{/if}}
          </section>
        </div>
        <div class="stat">
          <h2><span class='dot'>&bull;</span>&nbsp; Paid Seats Lost</h2>
          <section class="bad">
            {{#if paid}}
              {{paid.seats_lost}}
            {{else}}
              <i class="icon-refresh icon-spin"></i>
            {{/if}}
          </section>
        </div>
        <div class="stat">
          <h2><span class='dot'>&bull;</span>&nbsp; Trial Seats Created</h2>
          <section>
            {{#if paid}}
              {{trial.seats_created}}
            {{else}}
              <i class="icon-refresh icon-spin"></i>
            {{/if}}
          </section>
        </div>
        <div class="stat">
          <h2><span class='dot'>&bull;</span>&nbsp; Trial Seats Lost</h2>
            <section class="bad">
              {{#if paid}}
                {{trial.seats_lost}}
              {{else}}
                <i class="icon-refresh icon-spin"></i>
              {{/if}}
          </section>
        </div>
      {{/with}}
    </script>

    <script src="<%= asset_path('application.js') %>"></script>
  </body>
</html>

